BoxLayout:
    orientation: 'vertical'
    TextInput:
        id: input_number
        text: '34'
        font_size: 48
        multiline: False
        on_text: app.handle_calculate
    BoxLayout:
        orientation: 'horizontal'
        Button:
            id: up_button
            text: 'Up'
            on_press: app.handle_increment(+1)
        Button:
            id: down_button
            text: 'Down'
            on_press: app.handle_increment(-1)
